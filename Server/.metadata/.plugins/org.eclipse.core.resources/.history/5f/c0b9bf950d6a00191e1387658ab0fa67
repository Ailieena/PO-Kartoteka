import java.util.ArrayList;
import java.util.Collections;
import java.util.List;
import java.util.Map;

public class TaliaOczko
{
	List<Integer> cards;
	Map<Integer, Integer> pik;
	Map<Integer, Integer> trefl;
	Map<Integer, Integer> kier;
	Map<Integer, Integer> karo;
	TaliaOczko()
	{
		pik = new ArrayList<Integer>(13);
		trefl = new ArrayList<Integer>(13);
		kier = new ArrayList<Integer>(13);
		karo = new ArrayList<Integer>(13);
		for(int i = 0; i < 13; i++)
		{
			cards.add(i);
		}
		Collections.shuffle(cards);
	}
	
	
	
}
